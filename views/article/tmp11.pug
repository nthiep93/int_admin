header#header
.wrapper
    .layout_twoCol
        .container-fluid
            .row
                // left menu
                #leftMenu.sidebar
                // end left menu
                main.content(role='main')
                    .content_inner
                        nav(aria-label='breadcrumb')
                            ol.breadcrumb.mb-5
                                li.breadcrumb-item
                                    a.btn-hover-effect(href='/intranet_html/S1.html') Trang ch&#x1EE7;
                        // layout template 02
                        .temp10
                            h2.title #{article.content.title}
                            .date_post 25/02/2019 - 12:20
                            .post-detail
                                for row in article.content.content
                                    p !{row.text} 
                                    if row.images != undefined
                                        for obj in row.images
                                            p 
                                                img(src=obj.img)
                    // end layout template 02
